@page "/dynamic/post"
@attribute [Authorize]
<MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">新建动态页</MudText>
<MudOverlay Visible="_isPublishing" ZIndex="9999" DarkBackground="true">
    <MudProgressCircular Color="Color.Secondary" Indeterminate="true"/>
</MudOverlay>
<EditForm Model="@_t" OnValidSubmit="PostDataAsync">
    <MudCard>
        <MudCardContent>
            <DataAnnotationsValidator/>
            <MudGrid>
                <MudItem xs="12" md="12">
                    <MudTextField T="string"
                                  HelperText="如 index.html index.aspx home 之类"
                                  Immediate="true"
                                  Label="页面名称"
                                  Required="true"
                                  RequiredError="此项必填"
                                  @bind-value="_name"
                                  Variant="Variant.Text">
                    </MudTextField>

                </MudItem>
                <MudItem xs="12" md="12">
                    <HtmlEditor @ref="_editor" ElementId="dynamic-editor" Html="@_htmlContent.ToString()"></HtmlEditor>
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Disabled="_isPublishing" Color="Color.Primary">
                @if (_isPublishing)
                {
                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                    <MudText Class="ms-2">正在发布</MudText>
                }
                else
                {
                    <MudText>发布</MudText>
                }
            </MudButton>
            <MudButton Variant="Variant.Filled" Link="/dynamic">返回列表</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>